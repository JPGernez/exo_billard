<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    android:orientation="vertical">

        <TextView
            android:id="@+id/tvNumEssai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Essai 1 sur 3:"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginStart="5dp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/exoRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Point raté" />

        <RadioButton
            android:id="@+id/exoReussi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Point réussi" />

        <RadioButton
            android:id="@+id/bonPlacement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Point réussi avec bon placement" />
    </RadioGroup>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Optionnel: nb de points d'affilé:" />

        <TextView
            android:id="@+id/alertAffichScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="20+" />

        <SeekBar
            android:id="@+id/alertScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:max="20" />
    </LinearLayout>


</LinearLayout>