<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/backgrd">

    <LinearLayout
        android:id="@+id/LlayoutMenu"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_launcher"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/titre_app"
            android:id="@+id/textView"
            android:layout_weight="98"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_copy"
            android:background="@drawable/ic_action_copy"
            android:layout_weight="5"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_supp"
            android:background="@drawable/ic_action_discard"
            android:layout_weight="5"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_cancel"
            android:background="@drawable/ic_menu_remove"
            android:layout_weight="5"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/ic_action_overflow"
            android:id="@+id/menuOptions"
            android:layout_weight="1"/>

    </LinearLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2">

                   <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                       android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/titre1"
                    android:onClick="choixLivret"
                    android:background="@color/btnBackgrnd"
                    android:textColor="@color/textColor"
                    android:layout_margin="2dp"
                    android:layout_gravity="bottom"
                    android:lines="2"
                    android:tag="0"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/titre2"
                    android:onClick="choixLivret"
                    android:background="@color/btnBackgrnd"
                    android:textColor="@color/textColor"
                    android:layout_margin="2dp"
                    android:layout_gravity="bottom"
                    android:lines="2"
                    android:tag="0"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/titre3"
                    android:onClick="choixLivret"
                    android:background="@color/btnBackgrnd"
                    android:textColor="@color/textColor"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:lines="2"
                    android:tag="0"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/desc1"
                    android:background="@color/btnBackgrnd2"
                    android:tag="0"
                    android:lines="5"
                    android:layout_margin="2dp"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/desc2"
                    android:background="@color/btnBackgrnd2"
                    android:lines="5"
                    android:tag="0"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/desc3"
                    android:lines="5"
                    android:background="@color/btnBackgrnd2"
                    android:tag="0"
                    android:layout_margin="2dp"/>

            </TableRow>

           <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginTop="5dp">

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_column="0"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:text=""
                   android:id="@+id/titre4"
                   android:onClick="choixLivret"
                   android:tag="0"
                   android:background="@color/btnBackgrnd"
                   android:textColor="@color/textColor"
                   android:lines="2"
                   android:layout_margin="2dp"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_column="1"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:text=""
                   android:id="@+id/titre5"
                   android:onClick="choixLivret"
                   android:tag="0"
                   android:background="@color/btnBackgrnd"
                   android:textColor="@color/textColor"
                   android:lines="2"
                   android:layout_margin="2dp"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_column="2"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:text=""
                   android:id="@+id/titre6"
                   android:onClick="choixLivret"
                   android:tag="0"
                   android:background="@color/btnBackgrnd"
                   android:textColor="@color/textColor"
                   android:lines="2"
                   android:layout_margin="2dp"/>

           </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/desc4"
                android:background="@color/btnBackgrnd2"
                android:lines="5"
                android:tag="0"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/desc5"
                android:background="@color/btnBackgrnd2"
                android:lines="5"
                android:tag="0"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/desc6"
                android:background="@color/btnBackgrnd2"
                android:lines="5"
                android:tag="0"
                android:layout_margin="2dp"/>

        </TableRow>
    </TableLayout>


</ScrollView>
</LinearLayout>