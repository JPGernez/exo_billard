<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/backgrd">

    <LinearLayout
        android:id="@+id/LlayoutMenu"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_launcher"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/titre_app"
            android:id="@+id/textView"
            android:layout_weight="98"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_filtre"
            android:background="@drawable/ic_action_search"
            android:layout_weight="5"
            />

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/ic_action_overflow"
            android:id="@+id/menuOptions"
            android:layout_weight="1"/>

    </LinearLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:id="@+id/me_navExo"
           android:orientation="vertical"
           android:layout_height="wrap_content"
           android:layout_marginTop="2dp"
           android:layout_marginBottom="15dp"
           >
       <LinearLayout
            android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content"
           android:layout_marginTop="2dp"
           android:layout_marginBottom="15dp"
           >
                       <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Titre"
                    android:id="@+id/titre"
                    android:onClick="choixLivret"
                    android:background="@color/btnBackgrnd"
                    android:textColor="@color/textColor"
                    android:layout_margin="2dp"
                    android:layout_gravity="bottom"
                    android:lines="2"
                    android:tag="0"
                    android:layout_weight="98"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:id="@+id/me_prev"
               android:background="@drawable/ic_action_previous_item"
               android:layout_weight="5"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/me_next"
               android:background="@drawable/ic_action_next_item"
               android:layout_weight="5"
               />
</LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="description"
                android:id="@+id/desc"
                android:background="@color/btnBackgrnd2"
                android:tag="0"

                android:layout_margin="2dp"/>
       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:stretchColumns="0,1,2">

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   >
               <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/me_exoprev"
               android:background="@drawable/ic_action_previous_item"
                />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   android:gravity="center"
                   >
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/me_affich"
                   android:background="@drawable/ic_action_help"
                   />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   android:gravity="end"
                   >
               <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/me_exonext"
               android:background="@drawable/ic_action_next_item"

               />
               </LinearLayout>
            </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="10dp">
               <LinearLayout
                   android:id="@+id/emplExo1"
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp">
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/emplExo2"
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp">
               </LinearLayout>
               <LinearLayout
               android:id="@+id/emplExo3"
               android:layout_width="wrap_content"
               android:orientation="vertical"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">
           </LinearLayout>
           </TableRow>

           <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="100dp">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_column="0"
                           android:textAppearance="?android:attr/textAppearanceSmall"
                           android:text="desc1"
                           android:id="@+id/desc1"
                           android:background="@color/btnBackgrnd2"
                           android:lines="5"
                           android:tag="0"
                           android:layout_margin="10dp"
                           />
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_column="0"
                           android:textAppearance="?android:attr/textAppearanceSmall"
                           android:text="desc2"
                           android:id="@+id/desc2"
                           android:background="@color/btnBackgrnd2"
                           android:lines="5"
                           android:tag="0"
                           android:layout_margin="10dp"
                           />
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_column="0"
                           android:textAppearance="?android:attr/textAppearanceSmall"
                           android:text="desc3"
                           android:id="@+id/desc3"
                           android:background="@color/btnBackgrnd2"
                           android:lines="5"
                           android:tag="0"
                           android:layout_margin="10dp"
                           />

                   </TableRow>
       </TableLayout>

       </LinearLayout>
</ScrollView>
</LinearLayout>